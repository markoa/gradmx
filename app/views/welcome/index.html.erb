<% if logged_in? -%>
  <strong>
    Hi <%= @user.login %>!
  </strong>
  <small>
    <%= link_to "Log out", logout_path %>
  </small>

  <h2>Highlights</h2>
  <ul>
    <% for e in @highlights %>
    <li>
      <%= link_to(e.title, e) %>
    </li>
    <% end %>
  </ul>

  <%= link_to(t('home.view_events'), events_path) %>
<% else -%>
  <p>
    <%= link_to t('home.login'), login_path %>
    <%= t 'general.or' %>
    <%= link_to t('home.signup'), signup_path %>
  </p>

  <p>
    <%= link_to(t('home.view_events'), events_path) %>
  </p>
<% end -%>
